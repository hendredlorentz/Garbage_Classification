.slides {
  height: 380rpx;
}
.slides navigator,
.slides image {
  width: 100%;
  height: 100%;
}

.grid {
  display: flex;
  background-color: #fff;
  font-size: 28rpx;
  flex-wrap: wrap;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.grid .item {
  display: flex;
  flex-direction: column;
  width: 33.3333333%;
  height: 250rpx;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
}

.grid .item image {
  width: 70rpx;
  height: 70rpx;
}

.grid .item text {
  color: #888;
  display: block;
  margin-top: 20rpx;
}

.test {
  background-color: #fff;
}
